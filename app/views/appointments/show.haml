.panel.panel-default
  .panel-heading.clearfix
    %h4{class: "panel-title pull-left", style: "padding-top: 7.5px;"}
      Appointment
    .pull-right
      .btn-group
        = link_to 'New Comment', new_appointment_comment_path(@appointment), {class: 'btn btn-default btn-sm'}
        = link_to 'Edit', edit_appointment_path(@appointment), {class: 'btn btn-default btn-sm'}
  .panel-body
    .col-md-6
      .row
        = @appointment.street
      .row
        = @appointment.postal_code
        = @appointment.city
      .row
        = @appointment.country_code
    .col-md-6
      %a.th{href: static_gmaps_image_url_for(@appointment, 250, 250)}
        = image_tag static_gmaps_image_url_for(@appointment, 250, 250)

%table.table.table-striped
  %thead
    %tr
      %th Datum
      %th Text
  %tbody
    - @appointment.comments.each do |comment|
      %tr
        %td
          = l(comment.created_at, format: :date_with_time)
        %td
          = comment.text
